
<h1>List of Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <div class="text-right pb-3">
      <%= link_to 'New Product', new_product_path, class:'btn btn-outline-dark btn-sm', role:'button' %>
    </div>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.supplier.company %></td>
        <td>
          <% link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product), class:'btn btn-sm btn-outline-info', role:'button'%>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-outline-danger', role:'button' %>    
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


