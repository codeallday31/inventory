<h1>Suppliers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Company</th>
      <th>Contact person</th>
      <th>Contact number</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <form action="suppliers" method="GET">
     <input type="text" name="search">
     <button type="submit">Search</button>
   </form>
    <div class="text-right pb-3">
      <%= link_to 'New Supplier', new_supplier_path, class:'btn btn-sm btn-outline-dark', role:'button' %>
    </div>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= link_to supplier.company, supplier %></td>
        <td><%= supplier.contact_person %></td>
        <td><%= supplier.contact_number %></td>
        <td><%= supplier.address %></td>
        <td>
          <% link_to 'Show', supplier %>
          <%= link_to 'Edit', edit_supplier_path(supplier), class:'btn btn-sm btn-outline-info', role:'button' %>
          <%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-outline-danger', role:'button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

